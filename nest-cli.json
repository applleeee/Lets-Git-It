{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./config/env/*.env",
        "watchAssets": true,
        "outDir": "./dist"
      }
    ],
    "plugins": ["@nestjs/swagger"]
  }
}
